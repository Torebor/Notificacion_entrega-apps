<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.rcgonzalez.etregacorreosapp.Principal">

    <!--<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/String_TituloAplicacion"
        android:textStyle="bold"
        />-->


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txt_codigo"
            android:inputType="text"
            android:hint="Escanear codigo"
            android:enabled="false"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No se ha seleccionado ningun modem"
            android:id="@+id/tvcontact"
            android:layout_marginTop="3dp"
            android:textColor="#000"
            android:textSize="15dp"
            android:textAlignment="textStart"
            android:layout_marginLeft="10dp" android:layout_marginRight="10dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/btn_scan_p"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:fabSize="normal"
                app:borderWidth="0dp"
                android:tint="#FFFF"
                android:src="@drawable/ic_action_name"
                app:backgroundTint="#115470"
                app:pressedTranslationZ="12dp"
                android:layout_alignParentLeft="true"
                />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/btn_get_modem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:fabSize="normal"
                app:borderWidth="0dp"
                android:tint="#FFFF"
                android:src="@drawable/contacklist"
                app:backgroundTint="#115470"
                app:pressedTranslationZ="12dp"
                android:layout_centerHorizontal="true"
                />
            <android.support.design.widget.FloatingActionButton
                android:id="@+id/btn_send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:fabSize="normal"
                app:borderWidth="0dp"
                android:tint="#FFFF"
                android:src="@drawable/sms_listo"
                app:backgroundTint="#115470"
                app:pressedTranslationZ="12dp"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>
    </LinearLayout>


</RelativeLayout>
